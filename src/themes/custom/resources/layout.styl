
::-webkit-scrollbar
  width: 4px
::-webkit-scrollbar-track
  border-radius: 4px
  box-shadow: inset 0 0 6px rgba(0, 0, 0, .3)
::-webkit-scrollbar-thumb
  border-radius: 4px
  background: rgba(0, 0, 0, .4)
::-webkit-scrollbar-thumb:window-inactive
  background: rgba(0, 0, 0, .3)

.sub-toolbar
  align-items baseline
.layout-view
  .toolbar.sub-toolbar
    min-height 200px
    padding 10px 20px 0 20px
.flat
  .toolbar.sub-toolbar
    min-height 250px
    box-shadow 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)

.app-content
  background #F5F5F5
.app-container
  box-shadow 0 4px 5px -2px rgba(0, 0, 0, 0.2), 0 7px 10px 1px rgba(0, 0, 0, 0.14), 0 2px 16px 1px rgba(0, 0, 0, 0.12)
  margin -150px 1% 30px 2%
  z-index 2
  position absolute
  background #fff
  padding 10px
  width 96%
  min-height 200px
  min-width 300px


.layout-view
  overflow hidden
  overflow-y scroll

.flat-header
  .layout-view
    background $primary
    background linear-gradient(to bottom,  $primary 0%,$primary 200px,#adadad 200px,#ffffff 206px,#ffffff 100%)
.flat-header
    &.no-scroll .layout-header
      box-shadow none
.flat-header
  .layout-header
    padding-left 28px
  .swipe-header:not(.no-left)
    .layout-header
      padding-left 28px

@media (min-width: $drawer-screen-width-threshold)
  .flat-header
    .layout-view
      margin-left $drawer-width
  .flat-header:not(.swipe-header):not(.no-left)
    .layout-header
      padding-left $drawer-width

.layout-router
  transition: .2s
  background #f5f5f5

/* container */
.container
  padding-right 15px
  padding-left 15px
  margin-right auto
  margin-left auto
@media (min-width: 768px)
  .container
    width: 750px
@media (min-width: 992px)
  .container
    width 970px
@media (min-width: 1200px)
  .container
    width 1170px
